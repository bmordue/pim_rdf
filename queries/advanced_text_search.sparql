PREFIX text: <http://jena.apache.org/text#>
PREFIX dcterms: <http://purl.org/dc/terms/>
PREFIX : <https://ben.example/pim/>

# Advanced text search with field-specific queries
SELECT ?note ?title ?description ?score
WHERE {
  # Search specifically in description field
  (?note ?score) text:query (text:description "knowledge management") .
  
  # Ensure it's a note and get details
  ?note a :Note ;
        dcterms:title ?title ;
        dcterms:description ?description .
}
ORDER BY DESC(?score)